<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#227138"
        android:shadowColor="@android:color/holo_purple"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/backiconimg"
                android:layout_width="wrap_content"
                android:tint="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                android:background="@android:color/transparent"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/backiconimg"
                android:id="@+id/agroprofile"
                android:src="@drawable/ic_logo"
                android:layout_centerVertical="true">
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="AgroBot"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="7dp"
                android:textStyle="normal"
                android:layout_toRightOf="@id/agroprofile"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_recycle"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/card2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:shadowColor="@android:color/holo_purple"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        app:cardCornerRadius="15dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:tint="#227138"
                app:srcCompat="@drawable/ic_baseline_photo_camera_24"
                android:background="@android:color/transparent"/>
            <EditText
                android:id="@+id/chatedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="@drawable/edittext"
                android:hint="Type Here..."
                android:textColorHint="#227138"
                android:paddingHorizontal="15dp"
                android:backgroundTint="#D5FFB5"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/img1"
                android:layout_toLeftOf="@id/img3"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:tint="#227138"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_baseline_send_24"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>